<%- include('../../components/header.ejs') %>
<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="card mt-3">
                <div class="card-body">
                    <div class="card-title">
                        <h3>Menú de <%= restaurant.nombre %></h3>
                    </div>
                    <div class="table-responsive">
                        <table class="table">
                            <thead class="table-dark">
                                <tr>
                                    <th></th>
                                    <th>Nombre</th>
                                    <th>Descripción / ingredientes</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                <% burgers.forEach(burger => { %>
                                    <tr>
                                        <td>
                                            <!-- Mostrar la imagen de la hamburguesa -->
                                            <img src="/images/burgers/<%= burger.id %>.jpg" 
                                                onerror="this.onerror=null;this.src='/images/burgers/nophoto.jpg';" 
                                                alt="Foto de hamburguesa" class="burger-img" 
                                                style="width: 100px; height: auto;" />
                                        </td>
                                        <td><%= burger.nombre %></td>
                                        <td><%= burger.descripcion %></td>
                                        <td>
                                            <a class="btn btn-info" href="/burgers/<%= burger.id %>/reviews">Ver Reseñas</a>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('../../components/footer.ejs') %>
