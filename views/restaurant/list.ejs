<%- include('../../components/header.ejs') %>
<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="card mt-3">
                <div class="card-body">
                    <div class="card-title">
                        <h3>Lista de Restaurantes</h3>
                    </div>
                    <div class="table-responsive">
                        <table class="table">
                            <thead class="table-dark">
                                <tr>
                                    <!--<th>Id</th>-->
                                    <th>Nombre</th>
                                    <th>Descripción</th>
                                    <th></th>
                                    <th></th>
                                    <th></th> <!-- Nueva columna para el enlace de hamburguesas -->
                                </tr>
                            </thead>
                            <tbody>
                                <% restaurants.forEach(restaurant => { %>
                                    <tr>
                                        <!--<td><%= restaurant.id %></td>-->
                                        <td><%= restaurant.nombre %></td>
                                        <td><%= restaurant.descripcion %></td>
                                        <td><a class="btn btn-primary" href="/restaurants/<%= restaurant.id %>/edit">Editar</a></td>
                                        <td>
                                            <form method="post" action="/restaurants/<%= restaurant.id %>/delete" onsubmit="return confirm('¿Está seguro que desea eliminar?')">
                                                <input class="btn btn-danger" type="submit" value="Eliminar">
                                            </form>
                                        </td>
                                        <td>
                                            <a class="btn btn-info" href="/restaurants/<%= restaurant.id %>/burgers">Ver Hamburguesas</a>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('../../components/footer.ejs') %>
